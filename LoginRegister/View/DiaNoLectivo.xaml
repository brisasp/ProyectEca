<UserControl
    x:Class="LoginRegister.View.DiaNoLectivo"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LoginRegister.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:LoginRegister.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodels:DiaNoLectivoViewModel, IsDesignTimeCreatable=False}"
    mc:Ignorable="d"
    Width="804"
    Height="789">

    <Grid Margin="30" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Botón de Agregar -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Left" Margin="10">
            <ui:Button
                Command="{Binding AgregarDiaNoLectivoCommand}"
                Content="Agregar Día No Lectivo"
                Icon="{ui:SymbolIcon Fluent24}"
                Background="DarkSlateGray"
                Foreground="White"
                Height="40"
                Width="180" />
        </StackPanel>

        <!-- Tabla de datos -->
        <ui:DataGrid
            Grid.Row="1"
            x:Name="Tabla"
            ItemsSource="{Binding PagedDiasNoLectivos}"
            SelectedItem="{Binding SelectedDiaNoLectivo}"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            Margin="0,0,0,20"
            ColumnWidth="*"
            MaxHeight="400"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            Background="White"
            AlternatingRowBackground="LightGray"
            CellEditEnding="MyDataGrid_CellEditEnding"
            BorderBrush="Gray"
            BorderThickness="1">

            <ui:DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" />
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=dd/MM/yyyy}" />
                <DataGridTextColumn Header="Motivo" Binding="{Binding Motivo}" />
            </ui:DataGrid.Columns>

            <ui:DataGrid.Resources>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="Padding" Value="10,5"/>
                </Style>
            </ui:DataGrid.Resources>
        </ui:DataGrid>

        <!-- Controles de paginación -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button Content="⮜ Anterior" Command="{Binding PreviousPageCommand}" Background="Black" Foreground="White" Padding="10,5"/>
            <TextBlock Text="{Binding CurrentPage, StringFormat='Página {0} de'}" Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
            <TextBlock Text="{Binding TotalPages}" Foreground="White" VerticalAlignment="Center" Margin="5,0"/>
            <Button Content="Siguiente ⮞" Command="{Binding NextPageCommand}" Background="Black" Foreground="White" Padding="10,5"/>
        </StackPanel>

        <Button Content="🏠"
        HorizontalAlignment="Left"
        Margin="10,10,0,5"
        Command="{Binding VolverDashboardCommand}" Grid.Row="2" Width="49" />



        <!-- Botón Logout -->
        <ui:Button
            Command="{Binding LogoutCommand}"
            Content="Logout"
            Icon="{ui:SymbolIcon Fluent24}"
            Background="DarkSlateGray"
            Foreground="White"
            Height="30"
            Width="100"
            HorizontalAlignment="Right"
            Grid.Row="2"
            Margin="10"/>
    </Grid>
</UserControl>
